<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %>の編集</title>
</head>
<body>
  <h2><%= data.name %>の編集</h2>
  <form action="/disney/update/<%= id %>" method="POST">
    <table>
      <tr><th>項目</th><th>データ</th></tr>
      <tr><td>アトラクション名</td><td><input type="text" name="name" value="<%= data.name %>"></td></tr>
      <tr><td>エリア</td><td><input type="text" name="area" value="<%= data.area %>"></td></tr>
      <tr><td>定員</td><td><input type="text" name="capacity" value="<%= data.capacity %>"></td></tr>
      <tr><td>所要時間</td><td><input type="text" name="duration" value="<%= data.duration %>"></td></tr>
      <tr><td>待ち時間</td><td><input type="text" name="wait" value="<%= data.wait %>"></td></tr>
    </table>
    <input type="submit" value="更新">
  </form>
  <a href="/disney/list/<%= data.park %>">一覧に戻る</a>
</body>
</html>